{
    "configurations": [
        {
            "name": "Python Debugger: Flask",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "app.py",
                "FLASK_DEBUG": "1"
            },
            "args": "run --no-debugger --no-reload",
            "jinja": true
        },
        {
            "type": "chrome",
            "name": "http://0.0.0.0:5000/",
            "request": "launch",
            "url": "http://0.0.0.0:5000/"
        }
    ]
}